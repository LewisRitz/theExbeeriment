												<h4>Question Title (will be displayed to the user)</h4><input required type="text" required ng-model="textAreaQuestionTitleField"><br />
												<h4>Description (more detail than the name)</h4><input required type="text" ng-model="textAreaQuestionDescriptionField"><br />
												<h4>Question Rows: </h4><input required type="number" ng-model="textAreaRowsField"><br />
												<h4>Question Cols: </h4><input required type="number" ng-model="textAreaColsField"><br />
												<h4>Question Placeholder (dissapears when selected)</h4><input required type="text" ng-model="textAreaPlaceholderField"><br />
												<h4>Wrap Text(new lines will be saved)</h4><input type="checkbox" value="false" ng-model="textAreaWrapHardProperty" ng-change="changeTextAreaWrapProperty()"><br />
												<h4>Max Length:</h4><input required type="number" ng-model="textAreaMaxLengthProperty"><br />
												<h4>Required (is the user required to fill this in?)</h4><input type="checkbox" ng-model="textAreaRequiredField"><br />
												<div class="dropDowListFormPreview">
													<h1>Preview</h1>
													<textarea rows="{{textAreaRowsField}}" cols="{{textAreaColsField}}" wrap="{{textAreaWrapProperty}}" ng-requiired="{{textAreaRequiredField}}" placeholder="{{textAreaPlaceholderField}}" maxlength="{{textAreaMaxLengthProperty}}" value="{{textAreaValue}}"></textarea>
												</div>
												<button ng-click="saveATextArea()">Save The Text Area Question</button>
											</form>
										</div>
